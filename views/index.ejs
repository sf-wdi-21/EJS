<!DOCTYPE html>
<html>
<head>
  <% include partials/head %>
</head>
<body>
  <div id="page-wrapper" class="container">
    <header class="page-header">
      <h1>ToEat.ly <small>Put it in my belly!</small></h1>
    </header>
    <!-- form -->
    <form class="form-inline" id="new-food-form">
      <input name="name" type="text" class="form-control" id="food-name-input" placeholder="Name">
      <input name="yumminess" type="text" class="form-control" id="food-yumminess-input" placeholder="Yumminess">
      <button type="submit" class="btn btn-default">Eat me!</button>
    </form>
    <ul class="list-group" id="food-ul">
      <% foodItems.forEach(function(food) { %>
        <li class='list-group-item'><%= food.name %>
          <!-- yuminess label -->
          <span class="label label-default"><%= food.yumminess%></span>
          <!-- button w/ registered onclick function -->
          <button data-id="<%= food.id %>" onclick="deleteFood(this)" type="button" class="close" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        </li>
      <% }); %>
    </ul>
  </div>
</body>
</html>











